<section class="categories">
<header class="d-flex justify-content-between align-items-center bg-primary text-white py-2 px-3">
     <div>
        <%= link_to root_path, class: "text-white" do %>
            <i class="fa fa-bars" aria-hidden="true"></i>
        <% end %>
    </div>
    <h2 class= "justify-self-center">TRANSACTIONS</h2>
    <div>
    <%= link_to destroy_user_session_path, class:'text-white', :method => :delete do %>
         <i class="fas fa-sign-out-alt "></i>
    <% end %>
    </div>
  </header>


<div class="bg-white py-4 px-2">
   Total amount: <span class="fw-bold"> <%= number_to_currency(@category.transacs.sum(:amount)) %></span>
</div>

<ul class="d-flex categories-ul flex-column align-items-center">
    <%  @transacs.each do |transac| %>
        <li class="transac list-group-item d-flex justify-content-between m-3">
                <div>
                    <p class="mb-3 text-capitalize"><%= transac.name %></p>
                    <p class="smal-txt text-secondary"><%= transac.created_at.strftime("%d %B %Y") %> at <%= transac.created_at.strftime("%H:%M") %></p>
                </div>                              
                <div class="my-2">
                     <span class="fw-bold"> <%= number_to_currency(transac.amount) %></span>
                </div>
        </li>
    <% end %>
</ul>

<div class="scan">
<%= link_to "ADD NEW TRANSACTION", new_user_category_transac_path(current_user, @category) %>

</div>
</section>
