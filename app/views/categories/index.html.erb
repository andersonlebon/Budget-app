<section class="categories">
<header class="d-flex justify-content-between align-items-center bg-primary text-white py-2 px-3">
     <div>
     <i class="fa fa-bars" aria-hidden="true"></i>
    </div>
    <h2 class= "justify-self-center">CATEGORIES</h2>
    <div>
    <%= link_to destroy_user_session_path, class:'text-white', :method => :delete do %>
         <i class="fas fa-sign-out-alt "></i>
    <% end %>
    </div>
  </header>


<ul class="d-flex flex-column align-items-center p-2">
    <% @categories.each do |category| %>
        <li class="category">
            <%= link_to user_category_path(category.user, category), class: 'list-group-item d-flex justify-content-between align-items-center' do %>
                <div>
                    <p><%= category.icon %></p>
                </div>
                <div>
                    <p><%= category.name %></p>
                </div>
                <div>
                $00.00
                    <%
=begin%>
 <p><%= category.description %></p> 
<%
=end%>
                </div>
            <% end %>
        </li>
    <% end %>
</ul>
</section>
