<section class="new-food d-flex flex-column align-items-center justify-content-center ">
    <h2 class="text-secondary mt-4">Add New transacs</h2>
 <%= form_with(model: @transac, url: { action: "create" }) do |form| %>
    <div class="group-form">
        <%= form.label :name %><br />
        <%= form.text_field :name, autofocus: true, autocomplete: "name", class: "form-control"%>
    </div>

    <div class="group-form my-2">
        <%= form.label :"amount" %><br />
        <%= form.text_field :amount, autofocus: true, autocomplete: "measurement_unit", class: "form-control" %>
    </div>

     <div class="group-form my-2">
        <%= form.select :category_id, @categories.map { |t| [t.name, t.id]}, {}, class: 'form-control mb-3 mt-3', placeholder:'Food name' %>
    </div>

  <%= form.submit "Add", class: "btn btn-primary my-3 align-self-end btn-submit" %>
  </div> 
   <% end %> 

</section>