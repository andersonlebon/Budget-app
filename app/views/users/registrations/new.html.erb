<section class="sign-up">
  <header class="d-flex justify-content-between align-items-center bg-primary text-white">
    <%= link_to "Back", root_path, class: "text-white"%>
    <h2 class= "justify-self-center">Register</h2>
    <div></div>
  </header>
  <div class="bg-secondary profile"> profile</div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.email_field :name, autofocus: true, placeholder: "Full Name", autocomplete: "name", class: "border-top border-2"%>
  </div>

  <div class="field">
    <%= f.email_field :email, autofocus: true, placeholder: "Email", autocomplete: "", class: "border-top border-2"%>
  </div>

  <div class="field">
    <%= f.password_field :password, placeholder: "Passworld", class: "border-top border-2" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>
</section>